<h2 class="text-center">新規投稿</h2>
  <%= form_with model: @post, local:true do |form| %>
    <div class="form-group">
    <%= form.label :title, "タイトル" %><br />
    <%= form.text_field :title, class:"form-control" %>
    </div>

    <div class="form-group">
      <%= form.label :content, "本文" %><br />
      <%= form.rich_text_area :content %>
    </div>
    <%= form.label :category, 'カテゴリ' %>
      <%= form.collection_check_boxes(:category_ids, Category.all, :id, :name) do |category| %> 
        <%= category.label do %>
          <%= category.check_box %>
          <%= category.text %>
        <% end %>
    <% end %>
  
        <hr>

        <div class="form-label-group col-md-6 mx-auto">
          <%= form.submit "登録", class: "btn btn-lg btn-primary btn-block" %>
        </div>
    <% end %>
